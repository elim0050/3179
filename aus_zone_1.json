{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 800,
  "background": "#e4e2e2",
  "params": [
    {
      "name": "highlight_type",
      "value": null
    }
  ],
  "projection": {
    "type": "mercator"
  },
  "layer": [
    {
      "data": {
        "url": "maps/zone.json",
        "format": {
          "type": "topojson",
          "feature": "Climate zones AU"
        }
      },
      "mark": {
        "type": "geoshape"
      },
      "transform": [
        {
          "lookup": "properties.clim_zone",
          "from": {
            "data": {
              "values": [
                {
                  "clim": 1,
                  "value": "Zone 1: high humidity summer, warm winter",
                  "c": "#ff8554"
                },
                {
                  "clim": 2,
                  "value": "Zone 2: warm humid summer, mild winter",
                  "c": "#f0e442"
                },
                {
                  "clim": 3,
                  "value": "Zone 3: hot dry summer, warm winter",
                  "c": "#f2a84e"
                },
                {
                  "clim": 4,
                  "value": "Zone 4: hot dry summer, cool winter",
                  "c": "#f2eec2"
                },
                {
                  "clim": 5,
                  "value": "Zone 5: warm temperate",
                  "c": "#a3c97b"
                },
                {
                  "clim": 6,
                  "value": "Zone 6: mild temperate",
                  "c": "#4db3e6"
                },
                {
                  "clim": 7,
                  "value": "Zone 7: cool temperate",
                  "c": "#0072b2"
                },
                {
                  "clim": 8,
                  "value": "Zone 8: alpine",
                  "c": "#636362"
                }
              ]
            },
            "key": "clim",
            "fields": [
              "value",
              "clim",
              "c"
            ]
          }
        }
      ],
      "encoding": {
        "color": {
          "field": "clim",
          "legend": null, 
          "type": "nominal",
          "title": "Climate Zone",
          "scale": {
            "range": {
              "field": "c"
            }
          }
        },
        
        "opacity": {
          "condition": {
            "test": "highlight_type == null || datum.clim == highlight_type",
            "value": 0.8
          },
          "value": 0.2
        },
        "tooltip": [
          {
            "field": "value",
            "type": "nominal",
            "title": "Climate Zone Description"
          }
        ]
      }
    },
    {
      "data": {
        "url": "/datasets/aus_states_2.csv"
      },
      "mark": {
        "type": "text",
        "font": "Monaco",
        "fontSize": 12,
        "fontWeight": "bold",
        "color": "white",
        "align": "center"
      },
      "encoding": {
        "text": {
          "field": "State"
        },
        "color": {
          "value": "white"
        },
        "opacity": {
          "value": 1
        },
        "longitude": {
          "field": "Lon",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Lat",
          "type": "quantitative"
        }
      }
    }
  ]
}