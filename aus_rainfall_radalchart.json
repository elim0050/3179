{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "description": "A basic radial plot for Australian Rainfall Data.",
    "width": 500,
    "height": 500,
    
    "data": [
      {
        "name": "table",
        "url": "datasets/aus_rainfall.csv",
        "format": {"type": "csv"},
        "transform": [
          {
            "type": "pie",
            "field": "ANNUAL"
          }
        ]
      }
    ],
  
    "scales": [
      {
        "name": "r",
        "type": "sqrt",
        "domain": {"data": "table", "field": "ANNUAL"},
        "range": [20, 100]
      },
      {
        "name": "color",
        "type": "ordinal",
        "domain": [
          "Adelaide",
          "AliceÂ Springs",
          "Brisbane",
          "Canberra",
          "Darwin",
          "Hobart",
          "Melbourne",
          "Perth",
          "Broome",
          "Sydney",
          "Townsville",
          "Cairns"
        ],
        "range": [
          "#1f77b4",  
          "#ff7f0e",  
          "#2ca02c",  
          "#d62728",  
          "#9467bd",  
          "#8c564b",  
          "#e377c2",  
          "#7f7f7f",  
          "#bcbd22",  
          "#17becf",  
          "#ffbb78",  
          "#98df8a"   
        ]
      }
      
    ],
    
    "marks": [
      {
        "type": "arc",
        "from": {"data": "table"},
        "encode": {
          "enter": {
            "x": {"signal": "width / 2"},
            "y": {"signal": "height / 2"},
            "startAngle": {"field": "startAngle"},
            "endAngle": {"field": "endAngle"},
            "innerRadius": {"value": 50},
            "outerRadius": {"scale": "r", "field": "ANNUAL"},
            "fill": {"scale": "color", "field": "LOCATION"},
            "stroke": {"value": "#fff"},
            "tooltip": {
              "signal": "{'Location': datum.LOCATION, 'Annual Rainfall': datum.ANNUAL}"
            }
          },
          "update": {
            "fill": {"scale": "color", "field": "LOCATION"}
          },
          "hover": {
            "fill": {"value": "lightgrey"}
          }
        }
      },
      {
        "type": "text",
        "from": {"data": "table"},
        "encode": {
          "enter": {
            "x": {"signal": "width / 2"},
            "y": {"signal": "height / 2"},
            "radius": {"scale": "r", "field": "ANNUAL", "offset": 30},
            "theta": {"signal": "(datum.startAngle + datum.endAngle) / 2"},
            "fill": {"value": "#000"},
            "align": {"value": "center"},
            "baseline": {"value": "middle"},
            "text": {"field": "LOCATION"}
          }
        }
      }
    ],
  
    "legends": [
      {
        "fill": "color",
        "title": "Location",
        "orient": "right",
        "offset": 10
      }
    ]
  }
  