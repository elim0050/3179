{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Annual Rainfall",
    "width": 300,
    "height": 250,
    "background": "#dae0eb" , 
    "projection": {
      "type": "mercator"
    },
    "config": {
        "legend": {
            "title":null, 
          "labelFont": "Times New Roman",
          "labelFontSize": 10,
          "labelColor": "black",
          "orient": "right"
        }
      }, 
    "layer": [
      {
        "data": {
          "url": "maps/australia_map.json",
          "format": {
            "type": "topojson",
            "feature": "SA3_2016_AUST"
          }
        },
        "mark": {
          "type": "geoshape",
          "fill": "white",
          "stroke": "darkgray"
        }
      },
      {
        "data": {
          "url": "datasets/aus_highest_rainfall.csv"
        },
        "mark": {
          "type": "circle"
        },
        "encoding": {
          "longitude": {
            "field": "Lon",
            "type": "quantitative"
          },
          "latitude": {
            "field": "Lat",
            "type": "quantitative"
          },
          "color": {
            "field": "Rainfall",
            "type": "quantitative",
            "scale": {
              "domain": [1000, 12500],
              "range": ["#fff8c9", "#f0e07a", "#ffdd00"]  
            }
          },
          "size": {
            "field": "Rainfall",
            "type": "quantitative",
            "scale": {
              "domain": [1000, 12500],
              "range": [50, 500]  
            }
          },
          "tooltip": [
            {
              "field": "Place name",
              "type": "nominal",
              "title": "Station"
            },
            {
              "field": "Date",
              "type": "ordinal",
              "title": "Date"
            },
            {
              "field": "Rainfall",
              "type": "quantitative",
              "title": "Rainfall"
            }
          ]
        }
      }
    ]
  }
  